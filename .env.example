# LobeChat Production Deployment Configuration
# Copy this file to .env and configure for your environment

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
DEPLOYMENT_ENV=production
DOMAIN_NAME=your-domain.com
ENABLE_HTTPS=true

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=casdoor
POSTGRES_PORT=5432

# Database URLs (auto-generated, usually no need to change)
DATABASE_URL=postgres://postgres:${POSTGRES_PASSWORD}@postgresql:5432/lobe
CASDOOR_DB_URL=postgres://postgres:${POSTGRES_PASSWORD}@postgresql:5432/casdoor?sslmode=disable

# ============================================
# APPLICATION URLS
# ============================================
# Production URLs (replace with your domain)
APP_URL=https://chat.your-domain.com
AUTH_URL=https://chat.your-domain.com/api/auth
AUTH_CASDOOR_ISSUER=https://auth.your-domain.com

# For staging/development with ngrok
# APP_URL=https://your-app.ngrok.app
# AUTH_URL=https://your-app.ngrok.app/api/auth
# AUTH_CASDOOR_ISSUER=https://your-auth.ngrok.app

# ============================================
# SECURITY KEYS (Generate unique values!)
# ============================================
# Generate with: openssl rand -hex 32
KEY_VAULTS_SECRET=GENERATE_64_CHAR_RANDOM_STRING
NEXT_AUTH_SECRET=GENERATE_64_CHAR_RANDOM_STRING
CASDOOR_SESSION_SECRET=GENERATE_32_CHAR_RANDOM_STRING
SEARXNG_SECRET=GENERATE_32_CHAR_RANDOM_STRING

# ============================================
# CASDOOR AUTHENTICATION
# ============================================
AUTH_CASDOOR_ID=a387a4892ee19b1a2249
AUTH_CASDOOR_SECRET=550db86c5cbdcee3f8e0c57a6cea524d5bc95765
AUTH_CASDOOR_APP_NAME=lobechat
CASDOOR_PORT=8000
NEXT_AUTH_SSO_PROVIDERS=casdoor

# ============================================
# MINIO S3 STORAGE
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# S3 Configuration
S3_ENDPOINT=http://minio:9000
S3_BUCKET=lobe
S3_PUBLIC_DOMAIN=https://s3.your-domain.com
